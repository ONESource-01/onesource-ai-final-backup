{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["title", "blocks", "meta"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 10,
      "description": "Response title with emoji and section identifier"
    },
    "summary": {
      "type": "string",
      "minLength": 5,
      "description": "Optional brief summary of the response"
    },
    "blocks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "content"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["markdown", "code", "table", "callout", "image", "list"]
          },
          "content": {
            "type": "string",
            "minLength": 50,
            "description": "Substantial content with technical information"
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "required": ["schema", "session_id"],
      "properties": {
        "schema": {
          "type": "string",
          "enum": ["v2"]
        },
        "session_id": {
          "type": "string"
        },
        "tokens_used": {
          "type": "number",
          "minimum": 0
        }
      }
    }
  },
  "additionalProperties": true
}